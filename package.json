  "scripts": {
    "start:gateway:dev": "cross-env APP_ENV=api-gateway nest start -w",
    "start:user:dev": "cross-env APP_ENV=user nest start -w",
    "start:storage:dev": "cross-env APP_ENV=storage nest start -w",
    "start:mailer:dev": "cross-env APP_ENV=mailer nest start -w",
    "start:system:dev": "cross-env APP_ENV=system nest start -w",
    "start:order:dev": "cross-env APP_ENV=order nest start -w",
    "build": "ts-node ./script/build",
    "nest:build": "nest build",
    "format": "prettier --write \"./**/src/**/*.ts\"",
    "docker:build": "(docker rmi mongodb:latest || true) && docker build -f ./docker/Dockerfile -t mongodb:latest .",
    "mongodb:replica": "docker compose exec mongodb-primary bash -c \"mongosh --port \\$MONGODB_PRIMARY_PORT < /init-replica-set.js\"",
    "user:prisma:generate": "prisma generate --schema=src/lib/microservice/user/prisma/schema.prisma",
    "storage:prisma:generate": "prisma generate --schema=src/lib/microservice/storage/prisma/schema.prisma",
    "system:prisma:generate": "prisma generate --schema=src/lib/microservice/system/prisma/schema.prisma",
    "content:prisma:generate": "prisma generate --schema=src/lib/microservice/content/prisma/schema.prisma",
    "order:prisma:generate": "prisma generate --schema=src/lib/microservice/order/prisma/schema.prisma",
    "api-gateway:prisma:generate": "yarn user:prisma:generate && yarn storage:prisma:generate && yarn system:prisma:generate && yarn content:prisma:generate && yarn order:prisma:generate"
  },
  "dependencies": {
    "@mvanvu/ujs": "file:/home/rainy/DEV/utils/dist",
