{
  "name": "@mvanvu/nestjs-ujs",
  "version": "1.0.0",
  "author": "Rainy",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start:gateway:dev": "(pm2 delete ujs-gateway || true) && cross-env APP_ENV=gateway pm2 start nest --name ujs-gateway -- start -w",
    "start:user:dev": "(pm2 delete ujs-user || true) && cross-env APP_ENV=user pm2 start nest --name ujs-user -- start -w",
    "start:storage:dev": "(pm2 delete ujs-storage || true) && cross-env APP_ENV=storage pm2 start nest --name ujs-storage -- start -w",
    "start:all:dev": "yarn start:gateway:dev && yarn start:user:dev && yarn start:storage:dev && pm2 logs",
    "build": "nest build",
    "format": "prettier --write \"./**/src/**/*.ts\"",
    "docker:build": "(docker rmi mongodb:latest || true) && docker build -f ./docker/Dockerfile -t mongodb:latest .",
    "mongodb:replica": "docker compose exec mongodb-primary bash -c \"mongosh --port \\$MONGODB_PRIMARY_PORT < /init-replica-set.js\"",
    "user:prisma:generate": "prisma generate --schema=src/microservice/user/provider/prisma/schema.prisma",
    "user:prisma:push": "prisma db push --schema=src/microservice/user/provider/prisma/schema.prisma",
    "storage:prisma:generate": "prisma generate --schema=src/microservice/storage/provider/prisma/schema.prisma",
    "storage:prisma:push": "prisma db push --schema=src/microservice/storage/provider/prisma/schema.prisma"
  },
  "dependencies": {
    "@mvanvu/ujs": "file:../utils/dist",
    "@nestjs/common": "^10.3.1",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.3.1",
    "@nestjs/microservices": "^10.3.1",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.1",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.2.0",
    "@prisma/client": "^5.12.1",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "argon2": "^0.40.1",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "googleapis": "^137.1.0",
    "helmet": "^7.1.0",
    "node-device-detector": "^2.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.1",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.1",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.11",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "29.7.0",
    "pm2": "^5.3.1",
    "prettier": "^3.2.5",
    "prisma": "^5.12.1",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3"
  }
}
