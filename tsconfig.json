{
   "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2021",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "skipLibCheck": true,
      "strictNullChecks": false,
      "noImplicitAny": false,
      "strictBindCallApply": false,
      "forceConsistentCasingInFileNames": false,
      "noFallthroughCasesInSwitch": false,
      "allowJs": true,
      "checkJs": true,
      "esModuleInterop": true, // Important for node-device-detector
      "paths": {
         "@metadata": ["src/metadata"],
         "@shared-library": ["src/@shared-library"],
         "@shared-library/*": ["src/@shared-library/*"],
         "@gateway": ["src/api-gateway"],
         "@gateway/*": ["src/api-gateway/*"],
         "@microservice": ["src/microservice"],
         "@microservice/*": ["src/microservice/*"]
      }
   },
   "include": ["script/**/*.ts", "src/**/*.ts", "test/**/*.ts"],
   "exclude": ["node_modules", "**/node_modules/*", "build", "dist"]
}
