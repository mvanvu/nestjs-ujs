// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../../../../../node_modules/.prisma/system"
}

datasource db {
    provider = "mongodb"
    url      = env("MONGODB_SYSTEM_URL")
}

type User {
    id       String  @db.ObjectId
    name     String?
    username String?
    email    String?
}

enum MailerTransporter {
    smtp
}

type SMTPConfig {
    host String
    port Int
    user String
    pass String
}

type MailerConfig {
    transporter MailerTransporter
    smtp        SMTPConfig?
}

model ActivityLog {
    id             String   @id @default(auto()) @map("_id") @db.ObjectId
    messagePattern String
    dataInput      Json?
    dataResult     Json?
    createdAt      DateTime @default(now())
    author         User?
}

model Configuration {
    id                  String        @id @default(auto()) @map("_id") @db.ObjectId
    mailer              MailerConfig?
    jwtExpiresInMinutes Int

    createdAt DateTime  @default(now())
    createdBy String?   @db.ObjectId
    updatedAt DateTime? @updatedAt
    updatedBy String?   @db.ObjectId
}
